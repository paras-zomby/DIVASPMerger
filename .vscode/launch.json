{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole", 
            // 修改重点：将原来的字符串改为列表，每一项分开写
            "args": [
                "--mods",
                "..\\..\\mods\\"
            ],
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}